<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingTop="40dp"
    tools:context=".MainActivity">
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TableRow>
            <Button
                android:id="@+id/Test_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#716B6B"
                android:textSize="22sp"
                android:text="@string/btntest"
                android:textColor="@color/white"
                android:backgroundTint="#716B6B"
                />

            <ImageButton
                android:id="@+id/Star_imgbtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginTop="5dp"
                android:src="@drawable/star_be_ti"
                android:contentDescription="@string/content1"
                />

            <Button
                android:id="@+id/Exit_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="22sp"
                android:text="@string/btnexit"
                android:textColor="@color/white"
                android:backgroundTint="#716B6B"
                />
        </TableRow>
    </TableLayout>
    <EditText
        android:id="@+id/editTxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/ed_nam"
        android:paddingLeft="10dp"
        android:textColor="@color/black"
        android:textColorHint="#7E7979"
        />
    <RadioGroup
        android:id="@+id/rg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <RadioButton
            android:id="@+id/Opt2_rbtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="@string/rb1"
            android:textColor="@color/black"
            />
        <RadioButton
            android:id="@+id/Opt1_rbtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="@string/rb2"
            android:textColor="@color/black"
            />
    </RadioGroup>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <CheckBox
            android:id="@+id/Autosave_chb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:background="#bbb"
            android:text="@string/chkautosave"
            />

        <CheckBox
            android:id="@+id/Starstyle_chb"
            style="?android:attr/starStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:gravity="center"
            android:textSize="18sp"
            android:text="@string/star"
            android:textColor="#0404F8"
            android:textAlignment="center"
            android:background="#FFC107"
            />

        <ToggleButton
            android:id="@+id/OFF_tggbtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
    </LinearLayout>



    <TextView
        android:id="@+id/txtView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/txt1"
        android:textColor="#FF0000"
        android:textSize="20sp"
        android:textAlignment="center"
        android:layout_gravity="center"/>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/imageView"
            android:src="@drawable/ca_lia_thia_1"
            android:contentDescription="@string/content2"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:visibility="invisible"
            android:layout_marginLeft="50dp"
            />

        <ImageView
            android:id="@+id/imageView2"
            android:src="@drawable/ca_lia_thia_2"
            android:contentDescription="@string/content3"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:visibility="invisible"
            />
    </LinearLayout>
</LinearLayout>